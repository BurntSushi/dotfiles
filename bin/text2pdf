#!/bin/sh

first=0
for f; do
  if [ $first != 0 ]; then
    echo '--------------------------------------------------------------------------------'
    first=1
  fi

  echo "File: " $f
  echo
  cat $f
done | enscript --font="DejaVuSansMono10" --media Letter \
         --margins=25:25:: \
         --header='$n|Page $% of $=' -o - | ps2pdf - -

