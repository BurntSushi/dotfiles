#!/bin/bash

usage() {
  echo "Usage: $(basename "$0") [-a -p <cargo-profile>] [worktree] [<suffix>]"
}

base="red_knot"
alert=
profile=profiling
worktree=main
suffix=
while true; do
  case "$1" in
    -a)
      alert=bart
      shift
      ;;
    -p)
      profile="$2"
      shift 2
      ;;
    -h)
      usage
      exit 0
      ;;
    -*)
      usage >&2
      exit 1
      ;;
    *)
      break
      ;;
  esac
done
if [ -n "$1" ]; then
  worktree="$1"
  shift
  if [ -n "$1" ]; then
    suffix="$1"
    shift
  fi
fi

cargo_profile_name="$profile"
if [ "$cargo_profile_name" = "debug" ]; then
  cargo_profile_name="dev"
fi

checkout="$HOME/astral/ruff/$worktree"
cd "$checkout" || exit 1
if [ -n "$suffix" ]; then
  name="$base-$suffix"
else
  branch="$(git branch --show-current | sed 's#/#-#g')"
  if [ -n "$branch" ]; then
    name="$base-$branch"
  else
    name="$base-$worktree"
  fi
fi
bindir="$HOME/bin/x86_64"
dest="$bindir/$name"

cargo build --profile "$cargo_profile_name" -p red_knot
cp "target/$profile/$base" "$dest"
echo "binary at $dest"
if [ "$name" = "red_knot-main" ]; then
  cp "target/$profile/$base" "$bindir/"
  echo "binary also at $bindir/$base"
fi
if [ -n "$alert" ]; then
  A "$alert"
fi
