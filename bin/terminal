#!/bin/sh

# vim: tabstop=2 shiftwidth=2 softtabstop=2

temubin=alacritty
dir=
if [ "$1" = "-d" ]; then
  dir="$2"
  echo "$dir" >> "/tmp/terminal-$USER.log"
  shift 2
fi

logfile="/tmp/alacritty-$USER.log"
if [ -z "$dir" ]; then
  exec $temubin "$@" >> "$logfile" 2>&1
else
  exec $temubin --working-directory "$dir" "$@" >> "$logfile" 2>&1
fi
