#!/bin/sh

xsetroot -cursor_name left_ptr
# Resets keyboard map. Useful when calling
# this idempotently. Sometimes caps lock
# somehow gets enabled, even though I remap
# it. This way, I can just call `startup`
# again and it gets fixed.
setxkbmap -us
setxkbmap -option terminate:ctrl_alt_bksp
xset r rate 200
xset b 0
numlockx on
dpms-settings
autobright

if [ -f "$HOME/.Xresources" ]; then
  xrdb "$HOME/.Xresources"
fi
if [ -f "$HOME/.xmodmaprc" ]; then
  xmodmap "$HOME/.xmodmaprc"
fi

if pgrep xbindkeys > /dev/null 2>&1; then
  killall xbindkeys
fi
xbindkeys

case "$(myhostname)" in
  monty)
    xset m 2 1
    ;;
  kodos)
    system76-darter-set-kbd-backlight
    system76-darter-configure-touchpad
    kait-ssh-add-keys
    ;;
  kang)
    framework-configure-touchpad
    sudo framework_tool --fp-brightness low
    ;;
  bart)
    framework-configure-touchpad
    ;;
  chalmers|skinner|wiggum|otto|flanders|milhouse)
    no-blanking
    xset m 3 1
    ;;
  duff|frink)
    xset m 1 1
    xinput --set-prop 'Logitech Anywhere MX' 'libinput Accel Speed' -0.75
    xinput --set-prop 'pointer:Logitech MX Anywhere 2' 'libinput Accel Speed' -0.75
    ;;
esac
